style.
    .preview-image {
        width: inherit;
        max-width:324px;
        height:200px;
        max-height:200px;
    }

a.title-anchor(href=`/user/${upload.uploader.channelUrl || channelUrl}/${upload.uniqueTag}` style="color:black" )
    if upload.thumbnails && upload.thumbnails.custom
        img.preview-image(src=`${uploadServer}/${channelUrl || upload.uploader.channelUrl}/${upload.thumbnails.custom}` style="max-width:324px;")

    else if upload.fileType == 'video' && upload.thumbnails && upload.thumbnails.generated
        img.preview-image(src=`${uploadServer}/${channelUrl || upload.uploader.channelUrl}/${upload.thumbnails.generated}` style="max-width:324px;")

    else if upload.fileType == 'video' && upload.thumbnails && upload.thumbnails.medium
        img.preview-image(src=`${uploadServer}/${channelUrl || upload.uploader.channelUrl}/${upload.thumbnails.medium}` style="max-width:324px;")

    else if upload.fileType == 'video' && !upload.thumbnailUrl
        img.preview-image(src="/no_img.png")

    else if upload.fileType == 'image'
        // TODO: have to fix this
        img.preview-image(src=`${uploadServer}/${channelUrl|| upload.uploader.channelUrl }/${upload.uniqueTag}${upload.fileExtension}` style="max-width:324px;")

    else if upload.fileType == 'audio'
        img.preview-image(src='/images/audio.svg')

    else if upload.fileType == 'unknown'
        img.preview-image(src='/images/no_img.png')
