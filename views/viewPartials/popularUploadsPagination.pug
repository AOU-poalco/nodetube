nav.center-block.text-center(aria-label='Page navigation example')
    ul.pagination
        li.page-item
            a.page-link(href=`/media/popular/${previousNumber}?media=${media}&category${category}`) <

        each number in numbersArray
            li.page-item(class=(number == highlightedNumber) ? 'active' : undefined)
                a.page-link(href=`/media/popular/${number}?media=${media}&category=${category}`) #{number}

        li.page-item
            a.page-link(href=`/media/popular/${nextNumber}?media=${media}&category=${category}`) >